{{!< ./layout/default}}

<{{#contentFor 'body'}}

  <h3>Edit User</h3>
  <form action="/user/{{ user.id }}" method="post">
    Username<br>
    <input name="name" type="text" value="{{ user.name }}"><br><br>
    Password :
    <input name="password" type="password" value="{{ user.password }}"><br><br>
     Email :
    <input name="email" type="text" value="{{ user.email }}"><br><br>
     Date of Birth :
    <input name="date_of_birth" type="date" value="{{ user.date_of_birth }}"><br><br>
    <button type="submit">Edit</button>
  </form>

{{/contentFor}}